@model CiscaLab.Models.Especialidad

<h2>Editar Especialidad</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="EspecialidadId" />

    <div class="mb-3">
        <label asp-for="NombreEspecialidad" class="form-label"></label>
        <input asp-for="NombreEspecialidad" class="form-control" />
        <span asp-validation-for="NombreEspecialidad" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>