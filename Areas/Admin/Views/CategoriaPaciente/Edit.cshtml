@model CiscaLab.Models.CategoriaPaciente

@{
    ViewData["Title"] = "Editar Categoría de Paciente";
}

<h2>Editar Categoría de Paciente</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="CategoriaPacienteId" />

    <div class="mb-3">
        <label asp-for="NombreCategoriaPaciente" class="form-label"></label>
        <input asp-for="NombreCategoriaPaciente" class="form-control" />
        <span asp-validation-for="NombreCategoriaPaciente" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>