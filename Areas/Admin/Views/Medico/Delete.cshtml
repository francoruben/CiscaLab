@model CiscaLab.Models.Medico

<h2>Eliminar Médico</h2>

<div class="alert alert-warning">
    ¿Está seguro que desea eliminar al médico
    <strong>@Model.NombreMedico</strong> con especialidad
    <strong>@Model.Especialidad?.NombreEspecialidad</strong>?
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="MedicoId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>