@model IEnumerable<CiscaLab.Models.ExamenDetalleValoresNormales>
@{
    var detalle = ViewBag.Detalle as CiscaLab.Models.ExamenDetalle;
}

<h2>Valores normales para: @detalle.NombreValor (@detalle.Examen.NombreExamen)</h2>
<a asp-action="Create" asp-route-detalleId="@detalle.ExamenDetalleID" class="btn btn-success mb-3">Nuevo rango</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Único</th>
            <th>Hombre (Inf - Sup)</th>
            <th>Mujer (Inf - Sup)</th>
            <th>Niño (Inf - Sup)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.VNUnico</td>
                <td>@v.VNInferiorHombre - @v.VNSuperiorHombre</td>
                <td>@v.VNInferiorMujer - @v.VNSuperiorMujer</td>
                <td>@v.VNInferiorNino - @v.VNSuperiorNino</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@v.ExamenDetalleValoresNormalesId" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@v.ExamenDetalleValoresNormalesId" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>