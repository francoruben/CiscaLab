@using CiscaLab.ViewModels
@model List<CiscaLab.ViewModels.OrdenParaImpresionViewModel>

@{
    ViewData["Title"] = "Órdenes listas para impresión";
}

<h2>Órdenes de trabajo listas para impresión</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay órdenes de trabajo listas para imprimir.</div>
}
else
{
<table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Orden</th>
                <th>Fecha</th>
                <th>Paciente</th>
                <th>Edad</th>
                <th>Sexo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orden in Model)
            {
                <tr>
                    <td>@orden.OrdenTrabajoId</td>
                    <td>@orden.Fecha.ToShortDateString()</td>
                    <td>@orden.Paciente</td>
                    <td>@orden.Edad</td>
                    <td>@orden.Sexo</td>
                    <td>
                        <a asp-action="ReporteFinalPorOrden" asp-route-ordenTrabajoId="@orden.OrdenTrabajoId" class="btn btn-sm btn-primary">
                            Ver Reporte
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
