
@{
	ViewData["Title"] = "Lista de Pacientes";
}

<div class="container mt-4">
	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Lista de Pacientes</h2>
		</div>
		<div class="col-4 text-right">
			<a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Agregar Paciente</a>
		</div>
	</div>

	<br/>
	<br/>
	<table id="tblPacientes" class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>Primer Nombre</th>
				<th>Segundo Nombre</th>
				<th>Primer Apellido</th>
				<th>Segundo Apellido</th>
				<th>Numero de Identidad</th>
				<th>Género</th>
				<th>Está Activo</th>
				<th>Acciones</th>
			</tr>
		</thead>


	</table>
</div>

@section Scripts{
	<script src="~/js/paciente.js"></script>
}